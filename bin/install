#!/usr/bin/env bash
###***install-brewsearch***###
# Installation script for brewsearch

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
INSTALL_DIR="$HOME/.local/bin"
SYMLINK_NAME="bs"
SYMLINK_PATH="$INSTALL_DIR/$SYMLINK_NAME"
TARGET="$PROJECT_ROOT/bin/brewsearch"

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m'

echo
echo "╔════════════════════════════════╗"
echo "║  BrewSearch Installer          ║"
echo "╚════════════════════════════════╝"
echo

# Create .local/bin if it doesn't exist
if [ ! -d "$INSTALL_DIR" ]; then
    echo -e "${BLUE}Creating $INSTALL_DIR...${NC}"
    mkdir -p "$INSTALL_DIR"
fi

# Check if symlink already exists
if [ -L "$SYMLINK_PATH" ]; then
    CURRENT_TARGET=$(readlink "$SYMLINK_PATH")
    if [ "$CURRENT_TARGET" = "$TARGET" ]; then
        echo -e "${GREEN}✓${NC} BrewSearch is already installed correctly"
        echo -e "  Symlink: ${BLUE}$SYMLINK_PATH${NC}"
        echo -e "  Target:  ${BLUE}$TARGET${NC}"
        echo
        exit 0
    else
        echo -e "${YELLOW}⚠${NC} Existing symlink points to different location:"
        echo -e "  Current: ${BLUE}$CURRENT_TARGET${NC}"
        echo -e "  New:     ${BLUE}$TARGET${NC}"
        echo
        read -p "Replace existing symlink? (y/N) " -n 1 -r
        echo
        if [[ $REPLY =~ ^[Yy]$ ]]; then
            rm "$SYMLINK_PATH"
            echo -e "${GREEN}✓${NC} Removed old symlink"
        else
            echo -e "${RED}✗${NC} Installation cancelled"
            exit 1
        fi
    fi
elif [ -e "$SYMLINK_PATH" ]; then
    echo -e "${RED}✗${NC} File exists at $SYMLINK_PATH but is not a symlink"
    echo -e "  Please remove it manually and run this script again"
    exit 1
fi

# Create symlink
echo -e "${BLUE}Creating symlink...${NC}"
ln -s "$TARGET" "$SYMLINK_PATH"

if [ $? -eq 0 ]; then
    echo -e "${GREEN}✓${NC} BrewSearch installed successfully!"
    echo
    echo -e "  Symlink: ${BLUE}$SYMLINK_PATH${NC}"
    echo -e "  Target:  ${BLUE}$TARGET${NC}"
    echo
    
    # Check if .local/bin is in PATH
    if [[ ":$PATH:" != *":$INSTALL_DIR:"* ]]; then
        echo -e "${YELLOW}⚠${NC} $INSTALL_DIR is not in your PATH"
        echo
        echo "Add this to your ~/.zshrc or ~/.bashrc:"
        echo -e "${BLUE}export PATH=\"\$HOME/.local/bin:\$PATH\"${NC}"
        echo
        echo "Then reload your shell:"
        echo -e "${BLUE}source ~/.zshrc${NC}  # or source ~/.bashrc"
        echo
    else
        echo -e "${GREEN}✓${NC} $INSTALL_DIR is in your PATH"
        echo
        echo "You can now use BrewSearch:"
        echo -e "  ${BLUE}bs redis${NC}"
        echo
        echo "Clear shell cache if needed:"
        echo -e "  ${BLUE}hash -r${NC}"
        echo
    fi
else
    echo -e "${RED}✗${NC} Failed to create symlink"
    exit 1
fi
